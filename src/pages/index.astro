---
	import Layout from "../layouts/Layout.astro";
	import "../assets/iconfont.css";
	import { Skill } from "../components/Skill";
	import config from "../../meta.config";

	const { skills, name } = config;

---

<Layout title="Welcome to Astro.">
	<div class="mt-6 max-w-screen-lg md:flex mx-auto">
		<div class="md:w-1/3 p-2 relative">
			<div class="md:fixed">
				<div class="md:block">
					<div class="flex justify-center">
						<img class="h-32 w-32 rounded-full mx-auto mx-4"
							src="https://avatars.githubusercontent.com/u/8325281?v=4" />
					</div>
					<div class="mb-12 text-center mt-4 justify-center items-center">
						<h1 class="text-2xl text-xl text-gray-800 font-bold">{name}</h1>
						<div class="md:text-lg text-gray-600">前端工程师</div>
						<div class="md:text-lg text-gray-600">八年工作经验</div>
						<div class="text-gray-600 md:hidden mt-1">(wx: xiaoqu)</div>
					</div>
				</div>
				<div class="mx-4 my-4 hidden md:block">
					<div class="my-5 text-lg text-gray-600 flex">
						<div class="mr-2">
							<span class="iconfont icon-wechat"></span>
						</div>
						miaqu
					</div>
					<div class="my-5 text-lg text-gray-600 flex">
						<div class="mr-2">
							<span class="iconfont icon-Phoneshouji"></span>
						</div>
						15950506885
					</div>
					<div class="my-5 text-lg text-gray-600 flex">
						<div class="mr-2">
							<span class="iconfont icon-email"></span>
						</div>
						1095698022@qq.com
					</div>
					<div class="my-5 text-lg text-gray-600 flex">
						<div class="mr-2">
							<span class="iconfont icon-position"></span>
						</div>
						Shanghai
					</div>
					<a href="http://github.com/quyapeng" class="my-5 flex" target="_blank">
						<div class="mr-2">
							<span class="iconfont icon-github"></span>
						</div>
						<span class="text-blue-500">GitHub</span>
					</a>
				</div>
			</div>
		</div>
		<div class="md:w-2/3 p-2 w-full">
			<div class="mx-4 mb-6">
				<h1 class="mb-4 text-4xl text-gray-700 font-bold">个人评价</h1>
				<p class="text-lg">
					这里写个人评价
				</p>
			</div>
			<div class="mx-4">
				<h1 class="mb-4 text-4xl text-gray-700 font-bold">工作经历</h1>
				<ul>
					<li class="mb-4">
						<h2 class="text-3xl font-medium text-gray-800">A 公司</h2>
						<div>
							<i class="bx bx-calendar text-sm" style="color: #666"></i>
							<small class="text-sm text-gray-600">2021年5月 - 至今</small>
						</div>
						<div class="mt-1">
							<div>
								<h3 class="text-2xl font-medium text-gray-800">项目1</h3>
								<p>背景：新项目</p>
								<p>任务：后台管理系统</p>
								<p>行动：框架搭建，规范整理</p>
								<p>结果：工程化完成</p>
							</div>
						</div>
						<div class="mt-1">
							<div>
								<h3 class="text-2xl font-medium text-gray-800">项目2</h3>
								<p>背景：小程序</p>
								<p>任务：小程序</p>
								<p>行动：框架搭建，规范整理</p>
								<p>结果：工程化完成</p>
							</div>
						</div>
						<div class="mt-1">
							<div>
								<h3 class="text-2xl font-medium text-gray-800">其他项目</h3>
								<p>ssr 官网 nextjs；插件库；mini-vue</p>
							</div>
						</div>
					</li>
				</ul>
			</div>
			<div class="mx-4">
				<h1 class="mb-4 text-4xl text-gray-700 font-bold">Skill</h1>
				<ul>
					<li class="mb-6 flex flex-wrap">
						{
						skills.map((name:string) => {
						return (
						<Skill name={name} client:load />);
						})
						}
					</li>
				</ul>
			</div>
		</div>
	</div>
</Layout>